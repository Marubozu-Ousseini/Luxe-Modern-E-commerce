{
  "name": "luxe-ecommerce-fullstack",
  "version": "1.0.0",
  "description": "Application e-commerce full-stack avec React et Node.js, optimis√©e pour GCP.",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:client\"",
    "dev:server": "tsx watch src-server/server.ts",
    "dev:client": "vite",
    "build": "npm run build:client && npm run build:server",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "vite build",
    "postinstall": "npm run build",
    "preview": "vite preview --port 3000",
    "make:admin": "tsx scripts/make-admin.ts",
    "migrate": "tsx scripts/migrate.ts",
    "test": "vitest run",
    "prod": "pm2 start ecosystem.config.cjs --env production"
  },
  "keywords": [
    "react",
    "nodejs",
    "express",
    "ecommerce",
    "gcp"
  ],
  "author": "AI Studio",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "pm2": "^5.4.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^6.28.0",
    "winston": "^3.13.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.2",
    "@types/pg": "^8.15.6",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.2.2",
    "stripe": "^19.3.1",
    "supertest": "^7.1.4",
    "tsx": "^4.15.2",
    "typescript": "^5.4.5",
    "vite": "^5.4.8",
    "vitest": "^4.0.9"
  }
}
