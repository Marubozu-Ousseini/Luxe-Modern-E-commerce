########################################
# Luxe-Modern-E-commerce - .env.example #
########################################

# Server
PORT=8080
NODE_ENV=production
LOG_LEVEL=info

# Security
# Generate a strong secret (e.g., `openssl rand -base64 48`)
JWT_SECRET=change_me_strong_secret

# Admin bootstrap
ADMIN_EMAIL=admin@malafaareh.com
# Set a strong initial password before first deploy; rotate after login
ADMIN_PASSWORD=ChangeMe_Initial_Admin_Password!

# Cookies
# Use apex domain so cookies are valid on www.malafaareh.com and malafaareh.com
COOKIE_DOMAIN=.malafaareh.com

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=https://www.malafaareh.com,https://malafaareh.com,https://admin.malafaareh.com,http://localhost:3000,http://localhost:5173

# Frontend (Vite) - API base URL for production (leave empty to use same-origin)
# VITE_API_BASE_URL=https://api.malafaareh.com

# Database (Postgres / Cloud SQL)
# Prefer a single DATABASE_URL for simplicity. Example format:
# postgres://user:password@host:5432/dbname?sslmode=require
DATABASE_URL=postgres://postgres:localpassword@localhost:5432/luxe_db
# If using discrete variables instead (override when DATABASE_URL not set):
PGHOST=localhost
PGUSER=postgres
PGPASSWORD=localpassword
PGDATABASE=luxe_db
PGPORT=5432

# Payments (Stripe)
# Obtain from Stripe dashboard (test mode initially)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_CURRENCY=usd
STRIPE_PUBLIC_KEY=pk_test_...
